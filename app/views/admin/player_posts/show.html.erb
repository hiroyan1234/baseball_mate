<p id="notice"></p>
<div class="container d-flex pl-4 mb-3">
  <h4 class="bg-light">投稿詳細</h4>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-5">
      <% if @player_post.user.image.attached? %>
        <%= image_tag @player_post.user.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'default-image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-6">
      <table class="table">
        <tr>
          <th>投稿者</th><td><%= @player_post.user.last_name %></td>
        </tr>
        <tr>
          <th>投稿種類</th><td><%= @player_post.post_type_i18n %></td>
        </tr>
          <th>活動エリア</th><td><%= @player_post.prefecture %> > <%= @player_post.city %></td>
        </tr>
        <tr>
          <th>本文</th><td><%= @player_post.content %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class"container mt-4">
  <div class="d-flex align-items-center justify-content-center">
    <%= link_to "投稿を削除する", admin_player_post_path(@player_post.id), method: :delete, data: {confirm: "投稿を削除しますか？"}, class: "btn btn-danger" %>
  </div>
</div>
