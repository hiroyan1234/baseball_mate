  <div class="container d-flex mt-4">
    <h4 class="bg-light">管理者ログイン</h4>
  </div>

<%= form_with model: @admin, url: admin_session_path do |f| %>
<div class="container mt-4" style="width: 40%">
  <div class="align-items-center justify-content-center">
    <div class="row">
      <table class="table table-borderless">
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label "パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container mb-4 pb-4">
  <div class="d-flex align-items-center justify-content-center">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
</div>
<% end %>

