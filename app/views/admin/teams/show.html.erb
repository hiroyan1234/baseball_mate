<p id="notice"></p>
<div class="container mt-4">
  <div class="d-flex">
    <h4 class="bg-light">チーム詳細</h4>
  </div>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-5">
      <% if @team.image.attached? %>
        <%= image_tag @team.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'default-image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-6">
      <table class="table">
        <tr>
          <th style="width :25%">チーム名</th><td><%= @team.name %></td>
        </tr>
        <tr>
          <th>投稿者</th>
          <td>
            <% if @team.user.nickname.present? %>
              <%= link_to @team.user.nickname, user_path(@team.user.id) %>
            <% else %>
              <%= link_to user_path(@team.user.id) do %>
                <%= @team.user.last_name %> <%= @team.user.first_name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>平均年齢</th><td><%= @team.age %></td>
        </tr>
        <tr>
          <th>紹介文</th><td><%= @team.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class"container mt-4">
  <div class="d-flex align-items-center justify-content-center">
    <div class="d-flex">
      <div class="mr-4">
        <%= link_to "チーム情報を編集する",  edit_team_path(@team.id), class: "btn btn-success" %>
      </div>
      <div>
        <%= form_with model: @team_post, url: team_posts_new_path, method: :post do |f| %>
          <%= f.hidden_field :team_id, :value => @team.id %>
          <%= f.submit "新規投稿", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>