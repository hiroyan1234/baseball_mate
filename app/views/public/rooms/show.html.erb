<div class="container">
  <div class="left-button">
    <%= link_to "メッセージ一覧に戻る", rooms_path, class: "edit_link" %>
  </div>
  <h4 class="rooms-title">メッセージ相手</h4>
  <% @enters.each do |enter| %>
    <div class="d-flex">

      <% if enter.user == current_user %>
      <% else %>
        <div>
          <% if enter.user.image.attached? %>
            <%= image_tag enter.user.image, class:"user-image" %>
          <% else %>
            <%= image_tag "default-image", class:"user-image" %>
          <% end %>
        </div>
          <div>
            <% if enter.user.nickname == true %>
              <%= link_to enter.user.nickname, user_path(enter.user) %>さん
            <% else %>
              <%= link_to user_path(enter.user) do %>
                <%= enter.user.last_name %> <%= enter.user.first_name %>さん
              <% end %>
            <% end %>
          </div>
      <% end %>

    </div>
  <% end %>
  <hr>
  <div class="chats">
    <div class="chat">
      <% if @messages.present? %>
        <% @messages.each do |message| %>
          <div class="chat-box d-flex mb-10">
            <div class="chat-face">
              <% if message.user.image.attached? %>
                <%= image_tag message.user.image, class:"user-image", size: "35x35" %>
              <% else %>
                <%= image_tag "default-image", class:"user-image", size: "35x35" %>
              <% end %>
            </div>
            <div class="chat-hukidashi"> <strong><%= message.content %></strong><br>
              <%= message.created_at.strftime("%Y-%m-%d %H:%M")%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="posts">
      <%= form_with model: @message do |f| %>
        <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
          <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "投稿",class: 'form-submit'%>
      <% end %>
    </div>
  </div>
</div>