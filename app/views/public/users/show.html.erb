<p id="notice"></p>
<div class="container d-flex mt-4">
  <h4 class="bg-light"><%= @user.nickname %>さんのプロフィール</h4>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-6">画像</div>
    <div class="col-6">
      <table class="table">
        <tr>
          <th>名前(年齢)</th><td><%= @user.last_name %> <%= @user.first_name %>(<%= @user.age %>歳)</td>
        </tr>
        <tr>
          <th>ニックネーム</th><td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td>
            <% if @user.sex == "male" %>
              男性
            <% else %>
              女性
            <% end %>
          </td>
        </tr>
        <tr>
          <th>自己紹介</th><td><%= @user.introduction %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class"container mt-4">
  <div class="d-flex align-items-center justify-content-center">
    <%= link_to "プロフィールを編集する", edit_user_path, class: "btn btn-success" %>
  </div>
</div>